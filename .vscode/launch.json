    "version": "0.1.0",
    "compounds": [
        {
            "name": "All services",
            "configurations": 
            [ "Launch ServiceDiscovery"
            , "Launch Configuration"
            , "Launch Gateway"
            , "Launch Auth"
            , "Launch UserInfo"
            , "Launch CommonInfo"
        ],
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "type": "java",
            "name": "Launch ServiceDiscovery",
            "request": "launch",
            "mainClass": "com.vns.his.discovery.DiscoveryApplication",
            "projectName": "service-discovery"
        },
        {
            "type": "java",
            "name": "Launch Configuration",
            "request": "launch",
            "mainClass": "com.vns.his.configuration.ConfigurationApplication",
            "projectName": "configuration-service"
        },
        {
            "type": "java",
            "name": "Launch Gateway",
            "request": "launch",
            "mainClass": "com.vns.his.gateway.GatewayApplication",
            "projectName": "gateway-server"
        },
        {
            "type": "java",
            "name": "Launch Auth",
            "request": "launch",
            "mainClass": "com.vns.his.auth.AuthApplication",
            "projectName": "auth-service"
        },
        {
            "type": "java",
            "name": "Launch UserInfo",
            "request": "launch",
            "mainClass": "com.vns.his.user.UserInfoServiceApplication",
            "projectName": "user-info-service"
        },
        {
            "type": "java",
            "name": "Launch CommonInfo",
            "request": "launch",
            "mainClass": "com.vns.his.common.CommonInfoServiceApplication",
            "projectName": "common-info-service"
